{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "rootDirs": ["src", "docs"],
    "outDir": "build/lib",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test"]
}
